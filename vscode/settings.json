{
    "http.proxy": "http://127.0.0.1:8118",
    // ============== VIM ========================
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["j", "k"],
        "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "<C-w>",
                "h"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "commands": [
                "editor.action.showHover",
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "<C-w>",
                "l"
            ]
        },
        {
            "before": [
                ","
            ],
            "after": [
                "<C-w>"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-b>": false,
        "<C-t>": false,
        "<C-e>": false,
        "<C-w>": false,
        "<C-j>": false,
    },
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.surround": true,
    "vim.camelCaseMotion.enable": true,
    "vim.debug.silent": true,
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "xkb:us::eng",
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/ibus engine",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/ibus engine {im}",

    // For ligatures (character combination).
    "editor.fontFamily": "'Fira Code', 'Cascadia Code', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",

    "explorer.confirmDelete": false,
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "none", // removes whitespace chars
    "editor.renderIndentGuides": false, // removes indent guides

    "explorer.openEditors.visible": 0,
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.workspaceFolder": "/home/ofey/.leetcode",
    "workbench.iconTheme": "material-icon-theme",
    "leetcode.defaultLanguage": "python3",
    "leetcode.hint.commentDescription": false,
    "leetcode.hint.commandShortcut": false,
    "git.ignoreLegacyWarning": true,
    "git.autofetch": true,
    "cmake.configureOnOpen": true,
    "go.useLanguageServer": true,
    "explorer.confirmDragAndDrop": false,
    "git.confirmSync": false,
    "settingsSync.ignoredSettings": [
        "editor.fontFamily",
        "terminal.integrated.fontFamily"
    ],
    "settingsSync.keybindingsPerPlatform": false,
    "workbench.startupEditor": "newUntitledFile",
    "files.associations": {
        "*.grm": "yacc",
        "*.lex": "lex",
        ".env": "shellscript"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.suggestSelection": "first",
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false, // removes the status bar
    "editor.fontLigatures": true,
    "editor.foldingStrategy": "indentation",
    "workbench.colorTheme": "Dark++ Italic",
    "editor.minimap.enabled": false,
    "terminal.integrated.env.linux": {
        "IN_VSCODE_INTEGRATED_TERMINAL": "true"
    },
    "update.mode": "none",
    "latex-workshop.view.pdf.viewer": "browser",
    "window.menuBarVisibility": "hidden",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "REFACTOR"
    ],
    "cSpell.enabled": false,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.tabSize": 2
    },
    "peacock.affectDebuggingStatusBar": true,
    "peacock.affectStatusAndTitleBorders": true,
    "peacock.affectTabActiveBorder": true,
    "workbench.activityBar.visible": false,
    "alive.autoLoadOnSave": true,
    "alive.debug": true,
    "alive.swank.checkForLatest": true,
    "alive.format.indentWidth": 4,
    "workbench.statusBar.visible": false,
    "window.zoomLevel": 4
}